<!-- H E A D E R -->
<div class="sub-header navbar-default instructor-submenu" role="banner">
    <div class="container">
        {{#unless isImpersonated}}
            {{#unless isInFrame}}
                <h1>{{class.name}}</h1>
                <div class="term-class">
                    <label class="gray">{{class.term}}</label>
                    <span>&nbsp;â€¢&nbsp;</span>{{#link-to 'instructor.addEditClass' class.id class="gray edit-class"}}{{t "classes.editClass"}}{{/link-to}}
                </div>
            {{/unless}}
        {{/unless}}

        <ul class="menu-mob nav menu-dropdown menu-center" role="tablist">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">

                    {{#if (is-equal applicationModule 'instructor-hmcd')}}
                        {{t "header.howMyClassDoing"}}
                    {{/if}}
                    {{#if (is-equal applicationModule 'instructor-assignmentSummary')}}
                        {{t "header.howMyClassDoing"}}
                    {{/if}}
                    {{#if (is-equal applicationModule 'instructor-library.home')}}
                        {{t "header.questionLibrary"}}
                    {{/if}}
                    {{#if (is-equal applicationModule 'instructor-library.results')}}
                        {{t "header.questionLibrary"}}
                    {{/if}}
                    {{#if (is-equal applicationModule 'instructor-library.createQuestion')}}
                        {{t "header.questionLibrary"}}
                    {{/if}}
                    {{#if (is-equal applicationModule 'instructor-manageAssignment')}}
                        {{#if isExamAllowed}}
                            {{t "header.manageQuiz"}}
                        {{else}}
                            {{t "header.assignQuiz"}}
                        {{/if}}
                    {{/if}}
                    {{#if (is-equal applicationModule 'instructor-assignExam')}}
                        {{t "header.manageExams"}}
                    {{/if}}
                    {{#if (is-equal applicationModule 'instructor-examSummary')}}
                        {{t "header.summaryExam"}}
                    {{/if}}

                    &nbsp;<span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li>{{#link-to 'instructor.hmcd' class.id}} {{t "header.howMyClassDoing"}} {{/link-to}}</li>
                    <li>{{#link-to 'library.home' class.id}} {{t "header.questionLibrary"}} {{/link-to}}</li>
                    {{#if isExamAllowed}}
                        <li>{{#link-to 'instructor.manageAssignment' class.id 0}} {{t "header.manageQuiz"}} {{/link-to}}</li>
                        <li>{{#link-to 'instructor.assignExam' class.id}} {{t "header.manageExams"}} {{/link-to}}</li>
                        <li>{{#link-to 'instructor.examSummary' class.id}} {{t "header.summaryExam"}} {{/link-to}}</li>
                    {{else}}
                        <li>{{#link-to 'instructor.manageAssignment' class.id 0}} {{t "header.assignQuiz"}} {{/link-to}}</li>
                    {{/if}}
                </ul>
            </li>
        </ul>

        <nav class="collapse navbar-collapse" role="navigation">
            <ul id="menu-primary-navigation" class="nav navbar-nav nav-student">
                <li class="active menu-hmcd">{{#link-to 'instructor.hmcd' class.id}} {{t "header.howMyClassDoing"}} {{/link-to}}</li>
                <li class="menu-questionLibrary">{{#link-to 'library.home' class.id}} {{t "header.questionLibrary"}} {{/link-to}}</li>
                {{#if isExamAllowed}}
                    <li class="menu-assignQuiz">{{#link-to 'instructor.manageAssignment' class.id 0}} {{t "header.manageQuiz"}} {{/link-to}}</li>
                    <li class="menu-assignExam">
                        {{#if isExamThresholdControlAllowed}}
                            {{#link-to 'instructor.customizeExam' class.id }}
                                {{t "header.manageExams"}}
                            {{/link-to}}
                        {{else}}
                            {{#link-to 'instructor.assignExam' class.id }}
                                {{t "header.manageExams"}}
                            {{/link-to}}
                        {{/if}}
                    </li>
                    <li class="menu-summaryExam">{{#link-to 'instructor.examSummary' class.id}} {{t "header.summaryExam"}} {{/link-to}}</li>
                {{else}}
                    <li class="menu-assignQuiz">{{#link-to 'instructor.manageAssignment' class.id 0}} {{t "header.assignQuiz"}} {{/link-to}}</li>
                {{/if}}
            </ul>
        </nav>
    </div>
</div>
