{{#if hasFeedback}}
    <div class="panel-heading">
        <h4>
            <a href="#"><span class="collapse-icon glyphicon glyphicon-play"></span>{{t data-title}}</a>
        </h4>
    </div>
    <div class="feedback">
        {{#each data-feedback as |feedback|}}
            <p>{{{safe-html feedback.text}}}</p>
        {{/each}}
    </div>
{{/if}}
