                            </div>
                        {{/each}}
                    </div>
                {{else}}
                    <strong>{{t "common.noStrengths"}}</strong>
                {{/if}}
            </div>
        </div>
        <div class="weaknesses-bars bar-graph-container">
            {{#if categoryTitle}}
                <h3>{{categoryTitle}} {{t "common.weaknesses"}}</h3>
            {{else}}
                <h3>{{t "common.weaknesses"}}</h3>
            {{/if}}
            <div>
