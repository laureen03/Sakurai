                        {{/if}}
                    </em>
                    <div class="content">
                        {{#each weaknesses as |stat|}}
                            <div class="unit">
                                <h4 {{action "onPerformanceClick" stat.owner.id}}>{{stat.owner.name}}</h4>
                                <small>{{t "common.basedOn"}} {{stat.numStudents}} {{t "common.student.other"}}</small>
                                {{bar-graph currentValue=stat.classAverage caption="common.classAverageMasteryLevel" }}
                            </div>
                        {{/each}}
                    </div>
                {{else}}
                    <strong>{{t "common.noWeaknesses"}}</strong>
                {{/if}}
            </div>
        </div>
            {{else}}
                {{#if categoryTitle}}
                <div id="noStrengthsNoWeaknesses" class="bar-graph-container">
                    <h3>{{categoryTitle}}</h3>
                    <div>
                        <strong>{{t "common.noPerformances"}}</strong>
                    </div>
                </div>
                {{/if}}
        {{/unless}}
        {{#if toggleLinkEnabled}}
            {{#if categoryTitle}}
                <a class="toggle" {{action "toggleView" anchor-id}}>{{t "common.viewClassMastery"}} {{categoryTitle}}</a>
            {{else}}
                <a class="toggle" {{action "toggleView" anchor-id}}>{{t "common.viewClassMastery"}}</a>
            {{/if}}
        {{/if}}
    </div>

