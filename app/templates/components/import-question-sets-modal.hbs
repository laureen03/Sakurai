<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">{{t "common.modalImportQuestionSets.title"}}</h4>
        </div>
        <div class="modal-body">

            {{#if filteredProducts}}
                <div id="import-question-sets">

                {{#each filteredProducts as |product|}}
                    <div class="question-set">
                        <b>{{product.name}}</b>
                        <ul>
                            {{#each product.filteredQuestionSets as |questionSet|}}
                                <li>
                                    <a {{action 'doImport' questionSet.id }}>{{questionSet.name}}</a>
                                    <span>({{questionSet.totalQuestions}})</span>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                {{/each}}

                </div>
            {{else}}
                <div class="loading">
                    <span class="glyphicon glyphicon-refresh animate-spin"></span>
                </div>
            {{/if}}

        </div>
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->
