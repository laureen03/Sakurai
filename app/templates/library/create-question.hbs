<div class="container create-question">

    {{#if isMultipleChoice}}
        {{choice-manage-question
            data-store=store
            data-class=class
            data-question=question
            data-term-taxonomies=allTermTaxonomies
            data-products=questionProducts
            data-learning-objectives=learningObjectives
            data-create-mode=isCreating
            data-tagging-term-taxonomies=termTaxonomiesAllowedForTagging
            data-is-admin=isAuthoringEnabled
            data-create-variant=variant
            data-is-remediation-link-allowed=isRemediationLinkAllowed
            data-store=controller.store
            data-save-action="saveQuestion"
            data-subjects=subjects
            data-allProducts=allProducts
            data-allSections=allSections
            data-allLO=allLO}}
    {{/if}}

    {{#if isChoiceMultiple}}
        {{choice-multiple-manage-question
            data-store=store
            data-class=class
            data-question=question
            data-term-taxonomies=allTermTaxonomies
            data-products=questionProducts
            data-learning-objectives=learningObjectives
            data-create-mode=isCreating
            data-tagging-term-taxonomies=termTaxonomiesAllowedForTagging
            data-is-admin=isAuthoringEnabled
            data-create-variant=variant
            data-is-remediation-link-allowed=isRemediationLinkAllowed
            data-store=controller.store
            data-save-action="saveQuestion"
            data-subjects=subjects
            data-allProducts=allProducts
            data-allSections=allSections
            data-allLO=allLO}}
    {{/if}}

    {{#if isFillInTheBlank}}
        {{fill-blank-manage-question
            data-store=store
            data-class=class
            data-question=question
            data-term-taxonomies=allTermTaxonomies
            data-products=questionProducts
            data-learning-objectives=learningObjectives
            data-create-mode=isCreating
            data-tagging-term-taxonomies=termTaxonomiesAllowedForTagging
            data-is-admin=isAuthoringEnabled
            data-create-variant=variant
            data-is-remediation-link-allowed=isRemediationLinkAllowed
            data-store=controller.store
            data-save-action="saveQuestion"
            data-subjects=subjects
            data-allProducts=allProducts
            data-allSections=allSections
            data-allLO=allLO}}
    {{/if}}

    {{#if isGraphicOption}}
        {{graphic-option-manage-question
            data-store=store
            data-class=class
            data-question=question
            data-term-taxonomies=allTermTaxonomies
            data-products=questionProducts
            data-learning-objectives=learningObjectives
            data-create-mode=isCreating
            data-tagging-term-taxonomies=termTaxonomiesAllowedForTagging
            data-is-admin=isAuthoringEnabled
            data-create-variant=variant
            data-is-remediation-link-allowed=isRemediationLinkAllowed
            data-store=controller.store
            data-save-action="saveQuestion"
            data-subjects=subjects
            data-allProducts=allProducts
            data-allSections=allSections
            data-allLO=allLO}}
    {{/if}}

    {{#if isDragNDrop}}
        {{drag-and-drop-question
            data-store=store
            data-class=class
            data-question=question
            data-term-taxonomies=allTermTaxonomies
            data-products=questionProducts
            data-learning-objectives=learningObjectives
            data-create-mode=isCreating
            data-tagging-term-taxonomies=termTaxonomiesAllowedForTagging
            data-is-admin=isAuthoringEnabled
            data-create-variant=variant
            data-is-remediation-link-allowed=isRemediationLinkAllowed
            data-store=controller.store
            data-save-action="saveQuestion"
            data-subjects=subjects
            data-allProducts=allProducts
            data-allSections=allSections
            data-allLO=allLO}}
    {{/if}}

    {{#if isHotSpot}}
        {{hot-spot-manage-question
            data-store=store
            data-class=class
            data-question=question
            data-term-taxonomies=allTermTaxonomies
            data-products=questionProducts
            data-learning-objectives=learningObjectives
            data-create-mode=isCreating
            data-tagging-term-taxonomies=termTaxonomiesAllowedForTagging
            data-is-admin=isAuthoringEnabled
            data-create-variant=variant
            data-is-remediation-link-allowed=isRemediationLinkAllowed
            data-store=controller.store
            data-save-action="saveQuestion"
            data-subjects=subjects
            data-allProducts=allProducts
            data-allSections=allSections
            data-allLO=allLO}}
    {{/if}}

    <!--MODAL FOR SUCCESS-->
    <div id='success-modal' class="modal fade" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog small-modal">
            <div class="modal-content">
                <div class="modal-body cf">
                    <div class="success-body">
                        <span class="circle-ok glyphicon glyphicon-ok"></span>
                        <span class="title">{{t "questionLibrary.createQuestions.saved"}}!</span>
                        {{#if isAuthoringEnabled}}
                            {{#if isCreating}}
                                <span class="text">{{t "questionLibrary.createQuestions.questionAddedToQC1"}} {{question.id}} {{t "questionLibrary.createQuestions.questionAddedToQC2"}}</span>
                            {{else if isMajorEdit}}
                                <span class="text">{{t "questionLibrary.createQuestions.questionAddedToQC1"}} {{question.id}} {{t "questionLibrary.createQuestions.questionAddedToQC2"}}</span>
                            {{else}}
                                <span class="text">{{t "questionLibrary.createQuestions.questionAddedToQC1"}} {{question.id}} {{t "questionLibrary.createQuestions.questionUpdated"}}</span>
                            {{/if}}
                        {{else}}
                            {{#if isCreating}}
                                <span class="text">{{t "questionLibrary.createQuestions.questionAddedToQC1Instructor"}} {{t "questionLibrary.createQuestions.questionAddedToQC2Instructor"}}</span>
                            {{else}}
                                <span class="text">{{t "questionLibrary.createQuestions.questionAddedToQC1Instructor"}} {{t "questionLibrary.createQuestions.questionUpdated"}}</span>
                            {{/if}}
                        {{/if}}
                        <button id="btn-return-qc" type="submit" class="btn btn-default" {{action "returnToQuestionLibrary"}}>{{t "questionLibrary.createQuestions.returnToQuestionLibrary"}}</button>
                    </div>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <!--MODAL FOR ERROR-->
    <div id='error-modal' class="modal fade" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog small-modal">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body cf">
                    <div class="error-body">
                        <span class="text">{{{t "questionLibrary.createQuestions.removeAnswerChoiceWithMinorEdit"}}}</span>
                    </div>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>
