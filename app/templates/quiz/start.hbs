<div class="main clearfix" id="main" role="main">
    <section class="main-layout clearfix content-wrapper quiz-content">

        <div class="container cf animate-quiz-content">
            <h1 class="section-header dark">
                {{#if model.isExam}}
                    {{t "quiz.nclexExamBuilder"}}
                {{else}}
                    {{#if model.isReviewRefresh}}
                        {{t "reviewRefresh.yourQuizIsGenerated"}}
                    {{else}}
                        {{t "quiz.personalizingQuiz"}}
                    {{/if}}
                {{/if}}
            </h1>
            <div class="div1 align-center">
                <div class="circle incomplete">1</div>
                <h3 class="gray-text">
                    {{#if model.isExam}}
                        {{t "quiz.processingSettings"}}
                    {{else}}
                        {{t "quiz.analyzingPastPerformance"}}
                    {{/if}}
                </h3>
           </div>
            <div class="div2 align-center">
                <div class="circle incomplete">2</div>
                <h3>
                    {{#if model.isExam}}
                        {{t "quiz.buildingPracticeExam"}}
                    {{else}}
                        {{t "quiz.selectingOptimalQuestions"}}
                    {{/if}}
                </h3>
            </div>
            <div class="div3 align-center">
                <div class="circle incomplete">3</div>
                <h3 class="gray-text">
                    {{#if model.isExam}}
                        {{t "quiz.selectingFirstQuestion"}}
                    {{else}}
                        {{t "quiz.finalizingQuiz"}}
                    {{/if}}
                </h3>
            </div>
        </div>

    </section>
</div>
